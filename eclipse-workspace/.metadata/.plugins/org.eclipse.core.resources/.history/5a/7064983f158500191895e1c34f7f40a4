#include <stdio.h>
#include <stdlib.h>

main( )
{
int x = 4, y = 0, z ;
while ( x >= 0 )
{

if ( x == y )
continue ;
else
	x-- ;
	y++ ;
printf("\n%d %d", x, y ) ;
}
}
